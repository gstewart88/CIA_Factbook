<% @countries.each do |country| %>
  <%= country.name %> has a population of <%= country.population %>.
  <%= link_to("Show #{country.name}", country_path(country)) %>
  <%= button_to('Delete Country', country_path(country), method: :delete, data:{confirm: 'Delete them? Are you sure?'}) %>
  <%= link_to('Edit Country', edit_country_path(country)) %>
  <br>
<% end %>